
<link rel="stylesheet" href="/css/chat_style.css" />

<div class="join-container">
    <header class="join-header">
        <h1><i class="fas fa-smile"></i> ChatRooms</h1>
    </header>
    <main class="join-main">
        <form action="/chatrooms">
            <div class="form-control">
                <input type="text" name="username" id="username" placeholder="Enter a wacky username..." required />
            </div>
            <br>
            <div class="form-control">
                <select name="room" required>
                    {{#if rooms}}
                    <option value="" disabled selected>Select a room</option>
                    {{#each rooms}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                    {{else}}
                    <option value="" disabled selected>No public rooms. Create one now!!</option>
                    {{/if}}
                </select>
            </div>
            <button type="submit" class="btn btn-large btn-register waves-effect waves-light">Join Chat</button>
        </form>
        <br>
        <form action="/chatrooms/addRoom" method="POST">
            <div class="row">
                <div class="col s6">
                    <input type="text" name="name" placeholder="Create a new room" />
                </div>
                <div class="col s6">
                    <button type="submit" class="btn btn-large btn-register waves-effect waves-light">Create Room</button>
                </div>
            </div>
        </form>
    </main>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.14.1/ckeditor.js"
