
<link rel="stylesheet" href="/css/profile.css" />

<main id="main">

    <div class="row">

        <div class="col s12 m6">
            <h3>Posts</h3>
            <hr>
            <h3></h3>
            {{#each stories}}
            <div class="card blue-grey darken-1 story">
                <div class="card-content white-text">
                    <span class="card-title"><a class='white-text' href="/stories/{{_id}}">{{title}}</a></span>
                    <div class="card-action"></div>
                    {{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}
                </div>
            </div>
            {{else}}
            {{#if profile}}
            <p>You haven't posted any stories. Start today!!!</p>
            {{else}}
            <p>No posts</p>
            {{/if}}
            {{/each}}
        </div>

        <div class="col s12 m6">
            <div class="card teal darken-1 story">
                {{#if profile}}
                <a href="/user/edit/{{user._id}}" class="btn-floating halfway-fab blue"><i class="fas fa-edit fa-small"></i></a>
                {{/if}}
                {{#if user.image}}
                <div>
                    <img src="{{user.image}}" alt="{{user.displayName}}" class="avatar">
                </div>
                {{/if}}
                <div class="user-info">
                    <h2>{{user.displayName}}</h2>
                    {{#if user.bio}}
                    <p>{{StripScripts user.bio}}</p>
                    {{else}}
                    <p>Empty Bio :(</p>
                    {{/if}}
                    <br>
                    <p id="followersCount">{{user.followersCount}} <strong>Followers</strong></p>
                    <p id="followingCount">{{user.followingCount}} <strong>Following</strong></p>
                    <br>
                    <div id="repos">
                        {{#if user.linkedinURL}}
                        <a class="repo" href="{{user.linkedinURL}}">Linkedin</a>
                        {{/if}}
                        {{#if user.twitterURL}}
                        <a class="repo" href="{{user.twitterURL}}">Twitter</a>
                        {{/if}}
                        {{#if user.facebookURL}}
                        <a class="repo" href="{{user.facebookURL}}">Facebook</a>
                        {{/if}}
                        {{#if user.githubURL}}
                        <a class="repo" href="{{user.githubURL}}">Github</a>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{#unless profile}}
            {{{followingButton following loggedUser user._id}}}
            {{/unless}}
        </div>

    </div>
    
</main>